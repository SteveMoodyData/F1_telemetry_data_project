# F1 Telemetry Analysis - Environment Configuration

# Spark Configuration
SPARK_HOME=/path/to/spark
PYSPARK_PYTHON=python3
SPARK_DRIVER_MEMORY=4g
SPARK_EXECUTOR_MEMORY=4g

# Data Storage Paths
F1_CACHE_DIR=./data/cache
OUTPUT_DIR=./data/output
MODEL_DIR=./data/models

# FastF1 Configuration
FASTF1_CACHE_ENABLED=true
FASTF1_CACHE_DIR=./data/cache

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ML Configuration
DEFAULT_MODEL_TYPE=xgboost
RANDOM_SEED=42
TEST_SIZE=0.2

# Optuna Optimization
OPTUNA_N_TRIALS=50
OPTUNA_TIMEOUT=3600

# Data Quality Thresholds
SECTOR_CORRELATION_TOLERANCE=0.5
OUTLIER_IQR_MULTIPLIER=3.0
MIN_LAPS_FOR_ANALYSIS=3
